@{
    Layout = "/Views/Shared/_Layout.cshtml";
    IUser user = ViewBag.User;
    ViewData["UseCardTheme"] = true;
    ViewData["CompactMode"] = true;
}

<div class="card window-card container-fluid card-fill" style="max-width:768px">
<div class="card-head">
    <div class="container-fluid d-flex pt-4 pb-4 pl-md-4 pr-md-4">
        <div class="avatar">
            <img gravatar-email="@user.Email" class="rounded-circle" style="width:100%;max-width:8em" />
        </div>
        <div class="plan ml-4 mt-auto mb-auto">
            <h1><a asp-action="Show" class="text-reset text-decoration-none">@(string.IsNullOrEmpty(user.NickName) ? user.UserName : user.NickName)</a></h1>
            <h5>@(user.Plan ?? "This guy is lazy, left nothing here.")</h5>
            <h6 class="text-muted">Registered on @((user.RegisterTime ?? DateTimeOffset.UnixEpoch).ToString("yyyy-MM-dd"))</h6>
        </div>
    </div>
</div>
<div class="card-body">
    @RenderBody()
</div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}