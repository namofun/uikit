@{
    ViewData["Title"] = "Weather";
    ViewData["RefreshSpan"] = 5;
    ViewData["ExtraMenu"] = DateTimeOffset.Now.Second % 2 == 1 ? "" : "_MenuButton";
    ViewData["SuppressUserMenu"] = DateTimeOffset.Now.Second % 2 == 0;
    if (ViewData.ContainsKey("InAjax")) { Layout = null; }
}

@section Header {
    <h2 class="mt-2">@ViewData["Title"]</h2>
}

<datatable data="Model" />

<p>
    <a asp-action="CreateJob" class="btn btn-primary">Create Job</a>
    <a asp-action="CreateJob2" class="btn btn-primary">Create Composite Job</a>
</p>